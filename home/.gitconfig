[user]
        name = "Fen Labalme"
        email = fen@civicactions.com
[credential]
        helper = cache --timeout=7200
##
## These are standard CivicActions git settings for developers.
##
[branch]
	autosetuprebase = always
[core]
        # Treat spaces before tabs, lines that are indented with 8 or more spaces,
        # and all kinds of trailing whitespace as an error
        whitespace = space-before-tab,indent-with-non-tab,trailing-space
	excludesfile = ~/.gitignore_global
        autocrlf = input
[merge]
        # Include summaries of merged commits in newly created merge commit messages
        log = true
	ff = only
[pull]
	ff = only
[push]
        default = simple
##
## The following configurations can be modified per personal preference.
##
[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
[diff]
        tool = meld
[difftool]
        prompt = false
[log]
        abbrevCommit = true
[alias]
        co = checkout
        ci = commit
        st = status
        s = status -s
        g = grep -n --color
        # Handy logging aliases; lol is normal; ll is long form; l breaks at 20 lines
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
        ll = log --graph --decorate --abbrev-commit --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset'
        l = log --graph --decorate --pretty=oneline --abbrev-commit --all -n 20
        graphlog = log --oneline --graph --branches
        # Show verbose output about tags, branches or remotes
        tags = tag -l
        branches = branch -a
        remotes = remote -v
